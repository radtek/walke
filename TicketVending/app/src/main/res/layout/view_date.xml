<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <com.grandsea.ticketvendingapplication.view.ImageTextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:img="@mipmap/date"
        app:textContent="班次日期"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/vd_dateLeft"
            android:layout_width="@dimen/date_imgSize"
            android:layout_height="@dimen/date_imgSize"
            android:src="@mipmap/date_left"
            android:padding="@dimen/margin_4dp"/>

        <TextView
            android:id="@+id/vd_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2017年9月30号"
            android:textSize="26sp"
            android:textColor="@color/text_006aae"/>

        <ImageView
            android:id="@+id/vd_dateRight"
            android:layout_width="@dimen/date_imgSize"
            android:layout_height="@dimen/date_imgSize"
            android:src="@mipmap/date_right"
            android:padding="@dimen/margin_4dp"/>
    </LinearLayout>


</LinearLayout>