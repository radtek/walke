<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog006aac">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/color_006aae"
        android:textSize="25sp"
        android:gravity="center"
        android:text="添加取票联系人"
        android:textColor="@color/White"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/margin_10dp">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:src="@mipmap/dialog_id_card"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:textSize="25sp"
            android:gravity="center"
            android:text="根据交通部门监管要求请把取票人身份证放置于阅读区"
            android:textColor="@color/text_006aae"
            android:layout_marginLeft="@dimen/margin_20dp"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:gravity="center"
        android:text="提示：如果没带身份证，也可手工输入"
        android:textColor="@color/Red"
        android:layout_marginLeft="@dimen/margin_30dp"
        android:layout_marginRight="@dimen/margin_30dp"
        android:layout_marginTop="@dimen/margin_10dp"
        android:layout_marginBottom="@dimen/margin_10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="@dimen/margin_20dp">

        <com.grandsea.ticketvendingapplication.view.ReturnButton
            android:id="@+id/dgi_rbLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_dialog_button"
            app:img="@mipmap/dialog_cancel"
            app:textContent="取消"/>

        <com.grandsea.ticketvendingapplication.view.ReturnButton
            android:id="@+id/dgi_rbRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_dialog_button"
            app:img="@mipmap/dialog_hand_input"
            app:textContent="手工输入"
            android:layout_marginLeft="60dp"/>
    </LinearLayout>



</LinearLayout>