<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_shift_item_pressed"
    android:orientation="horizontal"
    android:layout_marginTop="@dimen/margin_5dp"
    android:paddingLeft="-30dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:id="@+id/is_sort"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="1 "
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="30sp"
            android:textStyle="bold"
            android:background="@drawable/bg_shift_sort"
            android:layout_margin="@dimen/margin_10dp"/>
    </LinearLayout>


    <TextView
        android:id="@+id/is_time"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:text="11:10"
        android:gravity="center"
        android:textColor="@color/text_006aae"
        android:textSize="28sp" />

    <TextView
        android:id="@+id/is_priceMan"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:layout_gravity="center"
        android:text="票价"
        android:gravity="center"
        android:textColor="@color/text_006aae"
        android:textSize="28sp" />

    <TextView
        android:id="@+id/is_priceChild"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:text="25"
        android:gravity="center"
        android:textColor="@color/text_006aae"
        android:textSize="28sp" />

    <TextView
        android:id="@+id/is_priceStudent"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:layout_gravity="right"
        android:text="余票"
        android:gravity="center"
        android:textColor="@color/text_006aae"
        android:textSize="28sp" />

    <TextView
        android:id="@+id/is_surplus"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:text="充足"
        android:gravity="center"
        android:textColor="@color/text_006aae"
        android:textSize="28sp" />


</LinearLayout>