<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <ImageView
        android:id="@+id/wine_ivLogo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/logoSize"
        android:scaleType="fitCenter"
        android:src="@mipmap/logo512x512"/>
    <ImageView
        android:id="@+id/wine_ivWine"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.55"
        android:scaleType="fitCenter"
        android:src="@mipmap/wine_all"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <ImageView
        android:id="@+id/wine_ivHand"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="05dp"
        android:onClick="clickHand"
        android:padding="5dp"
        android:src="@mipmap/icon_hand_3x"/>
    <!-- <ImageView
         android:id="@+id/wine_ivHand"
