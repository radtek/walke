         android:padding="8dp"
         android:layout_gravity="center_horizontal"
         android:layout_marginBottom="10dp"/>-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical">
        <TextView
            android:id="@+id/wine_tvWine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="美爵庄园南澳精选"
            android:textSize="@dimen/titleSize"
            android:gravity="center"
            android:textColor="@color/text_ffffff"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>
        <TextView
            android:id="@+id/wine_tvDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mejon Estate South Australia Premium Selection"
            android:textSize="13sp"
            android:gravity="center"
            android:textColor="@color/text_ffffff"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="4dp"/>
        <include layout="@layout/layout_to_scan"/>

