<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
                android:background="#fdfdfd">
    <!-- wrap_content -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">



        <TextView
            android:id="@+id/vai_tvName"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/adDetailMarginSize"
            android:gravity="center_vertical"
            android:text="管理码"
            android:textColor="#333333"
            android:textSize="16sp"/>

        <ImageView
            android:id="@+id/vai_ivArrow"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:padding="4dp"
            android:src="@mipmap/arrow_right"
            android:layout_alignParentRight="true"/>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="4dp"
            android:layout_toLeftOf="@id/vai_ivArrow"
            android:layout_toRightOf="@id/vai_tvName">
            <TextView
                android:id="@+id/vai_tvDesc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|end"
                android:textSize="16sp"
                android:text="请选择"/>
            <com.mabang.android.widget.MyEditText
                android:id="@+id/vai_etDesc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|end"
                android:hint=""
                android:textColorHint="@color/hintColor"
                android:textColor="#6b6b6b"
                android:textSize="16sp"
                android:background="#fcfcfc"
                android:singleLine="true"
                android:enabled="true"
                />
        </FrameLayout>



        <View
            android:id="@+id/vai_lineBottom"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/line"/>
    </RelativeLayout>


</RelativeLayout>