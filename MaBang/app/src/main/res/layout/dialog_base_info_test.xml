<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/dialog_bg_base_info"
        android:orientation="vertical"
        android:padding="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="50dp">

            <View
                android:layout_width="5dp"
                android:layout_height="22dp"
                android:layout_centerVertical="true"
                android:background="#ff565b"/>

            <ImageView
                android:id="@+id/dbit_ivLocationIcon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:src="@mipmap/dialog_location_icon"/>

            <TextView
                android:id="@+id/dbit_tvAddress"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/adDetailMarginSize"
                android:layout_marginRight="@dimen/adDetailMarginSize"
                android:layout_toLeftOf="@id/dbit_ivLocationIcon"
                android:gravity="center_vertical"
                android:text=""
                android:textSize="16sp"/>
            <!--天河区荷光路-->

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginBottom="12dp"
            android:background="@color/bg_default"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/adDetailMarginSize"
            android:layout_marginRight="@dimen/adDetailMarginSize"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/dbit_tvManagerCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:text="管理编号:88888"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/dbit_tvSoleCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="12dp"
                    android:text="唯一码：8888"
                    android:textSize="15sp"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <View
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="5dp"
                    android:background="#ff565b"/>


                <TextView
                    android:id="@+id/dbit_tvAdDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:lineSpacingExtra="6dp"
                    android:text=""/>
                <!--广告状态：广州技客科技\n详细地址：广州市天河区荷光路街道星辉大楼303室\n雨棚状态：不锈钢\n规格：2m*2m\n备注：无-->
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="#8052fd52"
        android:gravity="center">

        <Button
            android:id="@+id/ddit_btBookNow"
            style="@style/ButtonCommit"
            android:text="立即预定"/>
    </LinearLayout>


    <ImageView
        android:id="@+id/dbit_ivCancel"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:scaleType="fitXY"
        android:src="@mipmap/dialog_cancel"/>

</RelativeLayout>