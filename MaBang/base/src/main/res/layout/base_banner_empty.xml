<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#acabab">

    <ImageView
        android:id="@+id/bbe_ivDefault"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/picture_ad_default"/>
    <TextView
        android:id="@+id/bbe_tvText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:layout_centerInParent="true"
        android:text="没有图片数据"
        android:visibility="gone"/>
    <ProgressBar
        android:id="@+id/bbe_pbLoading"
        android:layout_width="30.0dip"
        android:layout_height="30.0dip"
        android:layout_centerInParent="true"
        android:indeterminateDrawable="@drawable/progress_drawable_white"/>


</RelativeLayout>