<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
              >
    <!--
    android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="@dimen/loginInputHeight"
    android:background="@drawable/bg_round_edge"
    -->
    <ImageView
        android:id="@+id/vli_icon"
        android:layout_width="@dimen/loginInputHeight"
        android:layout_height="match_parent"
        android:src="@mipmap/ic_launcher"
        android:padding="11dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="0dp"
        android:layout_weight="0"
        android:orientation="horizontal"
        android:padding="2dp">

        <walke.base.widget.ClearEditText
            android:id="@+id/vli_input"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入手机号"
            android:paddingLeft="12dp"
            android:textColor="#040404"
            android:textColorHint="@color/hintColor"
            android:textSize="16sp"/>

        <walke.base.widget.LoginCountdownView
            android:id="@+id/vli_loginCountdownView"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="获取验证码"
            android:textSize="13sp"/>

    </LinearLayout>


</merge>