<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="bottom">

    <RelativeLayout
        android:id="@+id/xlist_header_content"
        android:layout_width="match_parent"
        android:layout_height="40dp" >

        <TextView
            android:id="@+id/xlist_header_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="下拉刷新"
            android:layout_centerInParent="true"
            android:textSize="12sp"/>

        <walke.base.widget.xlist.DrawRing
            android:id="@+id/xlist_header_progressbar"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_toLeftOf="@id/xlist_header_text"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            app:aboveColor="#FFF9630D"
            app:underColor="#ececec"/>
    </RelativeLayout>

</LinearLayout>