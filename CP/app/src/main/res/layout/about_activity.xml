<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/account_background_low"
    android:fitsSystemWindows="true"
    android:tag="layout/activity_about_0">

    <include
        android:id="@+id/navigation_bar"
        layout="@layout/inc_title_bar"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/titlebar_height" />

    <ImageView

        android:id="@+id/imageView_icon"
        android:layout_width="60.0dip"
        android:layout_height="50.0dip"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100.0dip"
        android:src="@mipmap/cplogo" />

    <TextView
        android:id="@+id/textView_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10.0dip"
        android:text="@string/app_name"
        android:textColor="#ff878787"
        android:textSize="13.0sp" />

    <TextView
        android:id="@+id/textView_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView_name"
        android:layout_centerHorizontal="true"
        android:text="Version 1.1.0"
        android:textColor="#ff878787"
        android:textSize="13.0sp" />

    <TextView
        android:visibility="gone"
        android:textColor="@color/black1"
        android:id="@+id/textView_desc"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView_version"
        android:layout_marginLeft="45.0dip"
        android:layout_marginRight="45.0dip"
        android:layout_marginTop="5.0dip"
        android:background="@drawable/textview_border"
        android:padding="10.0dip"
        android:textSize="12.0sp" />

    <ImageButton

        android:id="@+id/button_tel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView_info"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15.0dip"
        android:background="@color/transparent"
        android:src="@mipmap/tel400"
        android:visibility="gone" />

    <TextView
        android:textColor="@color/gray1"
        android:id="@+id/textView_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10.0dip"
        android:gravity="center_horizontal"
        android:text="(C) 2016-2017 版权所有"
        android:textSize="13.0sp" />
</RelativeLayout>